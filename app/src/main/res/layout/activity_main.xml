<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.athou.scrollbarpanel.MainActivity">

    <com.athou.scrollbarpanel.ScrollbarPanelListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice"
        app:scrollBarPanel="@layout/scrollbarpanel"
        app:scrollBarPanelInAnimation="@anim/animal_in"
        app:scrollBarPanelOutAnimation="@anim/animal_out"/>
</RelativeLayout>
